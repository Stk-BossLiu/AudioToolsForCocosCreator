{
	"exclude": ["./i18n", "./dist", "./scripts", "./libs"],
	"compilerOptions": {
		"target": "ES5",
		"module": "CommonJS",
		"lib": ["ES2015", "ES2017", "ES2020", "DOM"],
		"allowJs": true,
		"moduleResolution": "node",
		"inlineSourceMap": true,
		"inlineSources": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": false,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDir": "./source",
		"types": ["node", "@cocos/creator-types/editor"]
	}
}
